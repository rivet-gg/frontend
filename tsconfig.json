{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "ES6",
		"lib": [
			// Default values
			"dom",
			"es6",
			"es2019",
			"dom.iterable",
			"scripthost",

			// For lit-element iterables
			"esnext.asynciterable"
		],
		"esModuleInterop": true,
		"sourceMap": true,

		"experimentalDecorators": true,

		// TODO: "strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"removeComments": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true
	},
	"include": ["src/**/*"]
}
